@model EFLayer.Class.Gonderiler

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
	.ck-editor__editable_inline {
		min-height: 400px;
	}
</style>
<script src="~/ckeditor/oureditor.js"></script>


<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<!-- Default box -->
				<div class="card">
					<div class="card-header">
						<h3 class="card-title">Gönderi Bilgileri</h3>

						<div class="card-tools">
							<button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
								<i class="fas fa-minus"></i>
							</button>
							<button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
								<i class="fas fa-times"></i>
							</button>
						</div>
					</div>
					<div class="card-body">
						<form asp-action="Edit">
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>
							<input type="hidden" asp-for="GonderiId" />
							<div class="form-group">
								<label asp-for="GonderiName" class="control-label">Gönderi Adı</label>
								<input asp-for="GonderiName" class="form-control" />
								<span asp-validation-for="GonderiName" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="GonderiBaslik" class="control-label">Gönderi Başlığı</label>
								<input asp-for="GonderiBaslik" class="form-control" />
								<span asp-validation-for="GonderiBaslik" class="text-danger"></span>
							</div>

							<div class="form-group">
								<label asp-for="GonderiResim" class="control-label"></label>
								<input asp-for="GonderiResim" class="form-control" />
								<span asp-validation-for="GonderiResim" class="text-danger"></span>
							</div>
							<div class="form-group">

								<label asp-for="kategoriId" class="control-label">Kategori Adı</label>
								@*  <select asp-for="kategoriId" class="form-control" asp-items="ViewBag.Kategoriler"></select> *@

								@Html.DropDownList("kategoriId",null,new {@class="form-control"} )
								<span asp-validation-for="kategoriId" class="text-danger"></span>
							</div>
							<div class="form-group">

								<div class="card card-outline card-info">
									<div class="card-header">
										<h3 class="card-title">
											Gönderi İçeriği
										</h3>
									</div>
									<div class="card-body">

										<textarea id="editor" name="GonderiIcerik" rows="5" style="color:#000;"> @Html.Raw(Model.GonderiIcerik)</textarea>

									</div>
								</div>
							</div>
							<div class="form-group">
								<input type="submit" value="Kaydet" class="btn btn-primary" />
							</div>
							<div>
								<a asp-action="Index" class="btn btn-warning">Listeye Geri Dön</a>
							</div>

						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>



<script>
	ClassicEditor
		.create(document.querySelector('#editor'))
		.catch(error => {
			console.error(error);
		});
</script>




