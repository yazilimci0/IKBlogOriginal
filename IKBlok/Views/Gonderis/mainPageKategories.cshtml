@model IEnumerable<EFLayer.Class.Gonderiler>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UILayout.cshtml";
}
@if (ViewData["kategoriler"] != null)
{
    var kategoriler = ViewData["kategoriler"] as SelectList;
    foreach (var item in kategoriler)
    {
        <a class="d-block " href="Gonderis/mainPageKategories/@item.Value">@item.Text</a>
    }
}
