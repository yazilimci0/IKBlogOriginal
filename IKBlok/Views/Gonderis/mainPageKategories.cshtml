@model IEnumerable<EFLayer.Class.Gonderiler>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/UILayout.cshtml";
}

<tbody>

    @foreach (var item in Model)
    {
        <tr>
            <div class="card post-item bg-transparent border-0 mb-5">
                <a href="/UITheme/post-details.html">
                    <img class="card-img-top rounded-0" src="@item.GonderiResim" alt="">
                </a>
                <div class="card-body px-0">
                    <h2 class="card-title">
                        <a class="text-white opacity-75-onHover" href="/UITheme/post-details.html">@item.GonderiBaslik</a>
                    </h2>
                    <ul class="post-meta mt-3">
                        <li class="d-inline-block mr-3">
                            <span class="fas fa-clock text-primary"></span>
                            <a class="ml-1">@(((DateTime)item.gonderiTarihi).ToString("yyyy-MM-dd HH:mm:ss"))</a>
                        </li>
                        <li class="d-inline-block">
                            <span class="fas fa-list-alt text-primary"></span>
                            <a class="ml-1">@item.kategoriId</a>
                        </li>
                    </ul>
                    <p class="card-text my-4">
                        @item.GonderiIcerik.Substring(0,120)
                    </p>
                    <a href="Gonderis/Details/@item.GonderiId" class="btn btn-primary">Read More <img src="/UITheme/AdminLTE/images/arrow-right.png" alt=""></a>
                </div>
            </div>
