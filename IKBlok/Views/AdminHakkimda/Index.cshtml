@model IEnumerable<EFLayer.Class.Hakkimda>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery/dist/jquery.js"></script>



<section class="content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">


				<div class="card">
					<div class="card-header">
						<h3 class="card-title">Hakkımda Bilgileri</h3>
					</div>

					<div class="card-body">
						<table id="example1" class="table table-bordered table-striped">
							<thead>
								<tr>
									<th>Başlık</th>
									<th>İçerik</th>
									<th>Resim Linki</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>
											@Html.DisplayFor(modelItem => item.baslik)
										</td>
										<td>
											@Html.DisplayFor(modelItem => item.icerik)
										</td>
										<td>
											@Html.DisplayFor(modelItem => item.resimLinki)
										</td>
										<td>
											<div style="float:right">
												<a asp-action="Edit" class="btn btn-warning" asp-route-id="@item.hakkimdaId">Düzenle</a>
											</div>

										</td>
									</tr>
								}
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<script>
	$(function () {
		$("#example1").DataTable({
			"responsive": true, "lengthChange": false, "autoWidth": false,
			"buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"],
			"language": {
				url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json',
			}
		}).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');
		$('#example2').DataTable({
			"paging": true,
			"lengthChange": false,
			"searching": false,
			"ordering": true,
			"info": true,
			"autoWidth": false,
			"responsive": true,
		});
	});
</script>


